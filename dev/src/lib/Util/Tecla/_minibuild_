TECLA_VERSION := "1.6.3"
TECLA_DIR := file("libtecla")

file("libtecla.a")[TECLA_DIR] => fun(Target) do
	execute("cd", TECLA_DIR, "&&",
		"./configure --disable-shared --enable-static",
		'--build={LIBHOST}',
		'--prefix={BUILDDIR}',
		'--libdir={BUILDDIR}',
		"--without-man-pages",
		'CFLAGS=\"{LIBCFLAGS}\"',
		'LDFLAGS=\"{LIBLDFLAGS}\"'
	)
	execute("cd", TECLA_DIR, "&&",
		"sed -i s/TARGET_LIBS\\ =\\ static\\ shared/TARGET_LIBS\\ =\\ static/g Makefile"
	)
	execute("cd", TECLA_DIR, "&&",
		"make clean"
	)	
	execute("cd", TECLA_DIR, "&&",
		"make"
	)
	(TECLA_DIR / "libtecla.a"):copy(Target)
end

TECLA_DIR => fun() do
	execute('wget -nv http://www.astro.caltech.edu/~mcs/tecla/libtecla-{TECLA_VERSION}.tar.gz -O- | tar xvzP')
	execute("cd", TECLA_DIR, "&&",
		"sed -i s/-fpic//g configure &&",
		"chmod +x configure"
	)
end

CFLAGS := old + ["-I", file("include")]
LDFLAGS := old + ["Riva/Memory.rlib"]
file("Tecla.o")[file("libtecla.a")]
riva_module("Util/Tecla", [file("Tecla.o")], [file("libtecla.a")])
