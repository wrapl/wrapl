CFLAGS += -std=gnu99
LDFLAGS += Std.rlib Agg.rlib Riva.rlib Gmp.rlib
RDOCFLAGS += -I$(dirname $(file OMakefile))$(DIRSEP)
if $(equal $(OSTYPE), Win32)
	LDFLAGS += kernel32.rlib
	export

RivaModule(Std/Address, Address)
RivaModule(Std/Array, Array)
RivaModule(Std/Function, Function)
RivaModule(Std/Number, Number Number2)
RivaModule(Std/Integer, Integer Integer2)
RivaModule(Std/Methods, Methods Methods2)
RivaModule(Std/Object, Object)
RivaModule(Std/Rational, Rational)
RivaModule(Std/Real, Real Real2)
RivaModule(Std/String, String String2)
RivaModule(Std/Symbol, Symbol)
RivaModule(Std/Type, Type Type2)

FILES[] =

$(OUT_LIB)Std.riva: \
	Address.o \
	Array.o \
	Function.o \
	Number.o \
	Integer.o Integer2.o \
	Methods.o Methods2.o \
	Object.o \
	Rational.o \
	Real.o Real2.o \
	String.o String2.o \
	Symbol.o \
	Type.o

