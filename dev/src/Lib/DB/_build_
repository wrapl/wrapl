if lfs.attributes("/usr/include/postgresql/server/common/fe_memutils.h") then
	CFLAGS = extend(CFLAGS,
		"-I/usr/include/postgresql",
		"-I/usr/include/postgresql/internal/",
		"-I/usr/include/postgresql/server/"
	)
elseif lfs.attributes("/usr/include/postgresql/9.5/server/common/fe_memutils.h") then
	CFLAGS = extend(CFLAGS,
		"-I/usr/include/postgresql",
		"-I/usr/include/postgresql/9.5/internal/",
		"-I/usr/include/postgresql/9.5/server/"
	)
end

riva_module("DB/Postgres", {file("Postgres.o")})