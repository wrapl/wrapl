CFLAGS += $(shell pkg-config --cflags glib-2.0) -include glib.h -include glib/gstdio.h -include glib-unix.h
LDFLAGS += $(shell pkg-config --libs-only-l glib-2.0 gthread-2.0)

if $(file-exists $(GIR_AUTOGEN))
	foreach(FILE, $(rootname $(basename $(glob *.c))))
		RivaModule(Gir/GLib/$(FILE), $(FILE))

RivaModule(Gir/GLib/GRivaSource, GRivaSource)
