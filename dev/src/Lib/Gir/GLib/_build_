CFLAGS = extend(CFLAGS, "-std=gnu99", pkg_config("--cflags --cflags glib-2.0"), "-include glib.h -include glib/gstdio.h -include glib-unix.h")
LDFLAGS = extend(LDFLAGS, "libdl.rlib", pkg_config("--libs-only-l glib-2.0 gthread-2.0"))

detect_modules("Gir/GLib")

riva_module("Gir/GLib/GRivaSource", {file("GRivaSource.o")})