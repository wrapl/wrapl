CFLAGS += $(shell pkg-config --cflags cairo glib-2.0) \
	-include cairo.h -include cairo-svg.h -include cairo-ps.h -include cairo-script-interpreter.h -include cairo-pdf.h \
	-include cairo-ft.h -include cairo-script.h
LDFLAGS += $(shell pkg-config --libs-only-l cairo glib-2.0)

if $(file-exists $(GIR_AUTOGEN))
	foreach(FILE, $(rootname $(basename $(glob *.c))))
		RivaModule(Gir/cairo/$(FILE), $(FILE))
