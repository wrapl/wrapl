CFLAGS += $(shell pkg-config --cflags gconf-2.0) -include gconf/gconf.h -include gconf/gconf-listeners.h -include gconf/gconf-changeset.h\
    -include gconf/gconf-error.h -include gconf/gconf-client.h -include gconf/gconf-engine.h
LDFLAGS += $(shell pkg-config --libs-only-l gconf-2.0 gobject-2.0)

if $(file-exists $(GIR_AUTOGEN))
	foreach(FILE, $(rootname $(basename $(glob *.c))))
		RivaModule(Gir/GConf/$(FILE), $(FILE))
