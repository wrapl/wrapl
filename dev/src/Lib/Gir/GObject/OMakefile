CFLAGS += -std=gnu99 $(shell pkg-config --cflags gobject-2.0) -include glib-object.h -include gobject/gvaluecollector.h
LDFLAGS += Std.rlib Riva.rlib Util.rlib Sys/Module.rlib libdl.rlib $(shell pkg-config --libs-only-l gthread-2.0 gobject-2.0)

if $(file-exists $(GIR_AUTOGEN))
	foreach(FILE, $(rootname $(basename $(glob *.c))))
		RivaModule(Gir/GObject/$(FILE), $(FILE))

RivaModule(Gir/GObject/Init, Init)
RivaModule(Gir/GObject/Riva, Riva)
RivaModule(Gir/GObject/Type, Type)
RivaModule(Gir/GObject/Enum, Enum)
RivaModule(Gir/GObject/Interface, Interface)

