-- ROOT --

if not PLATFORM then
	PLATFORM := shell("uname")[1, -1]
end

if not OS then
	if PLATFORM = "Linux" then
		var File := open("/etc/os-release", "r"), Line
		loop while Line := File:read
			if Line[1, 4] = "ID=" then
				OS := Line[4, 0]
				exit
			end
		end
		File:close
	end
end

print(PLATFORM, " ", OS)

OUT_BIN := file("bin")
OUT_LIB := file("lib")
OUT_DOC := file("doc")
OUT_WEB := file("web")

mkdir(OUT_BIN)
mkdir(OUT_LIB)
mkdir(OUT_DOC)

subdir("dev")